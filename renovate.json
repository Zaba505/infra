{
    "extends": [
        "config:best-practices"
    ],
    "osvVulnerabilityAlerts": true,
    "schedule": [
        "before 4am"
    ],
    "baseBranchPatterns": [
        "main"
    ],
    "labels": [
        "dependencies"
    ],
    "ignorePaths": [
        "**/docs/**"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "gomod"
            ],
            "matchDepTypes": [
                "indirect"
            ],
            "enabled": true
        }
    ],
    "postUpdateOptions": [
        "gomodTidy",
        "gomodUpdateImportPaths"
    ]
}
